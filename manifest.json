{
    "manifest_version": 2,
    "name": "QA-components",
    "description": "Highlight app's components and provide brief description for QA",
    "version": "1.0.0",
    "background": {
        "scripts": [
            "index.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "qabot.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "./assets/icon.png",
        "default_title": "For QA from Devs"
    },
    "icons": {
        "16": "./assets/icon.png",
        "32": "./assets/icon32.png",
        "48": "./assets/icon48.png",
        "128": "./assets/icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}